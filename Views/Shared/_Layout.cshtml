

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title - Admin</title>
    <link rel="icon" href="https://cdn.icon-icons.com/icons2/2136/PNG/512/google_games_icon_131690.png" type="image/x-icon">
    <link rel="stylesheet" href="~/Content/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/style.css" />
</head>
<body>
    <main class="container mw-100 p-0 m-0">
        <header>
            <nav class="Menu-Lateral">
                <div class="Menu-Lateral-titulo">@Html.ActionLink("Proyecto", "Admin", "Admin")</div>

                <div class="Menu-Lateral-nav-links">
                    @Html.ActionLink("Productos", "Index", "Productos")
                    @Html.ActionLink("Usuarios", "Index", "Usuarios")
                    @Html.ActionLink("Volver a la tienda", "Index", "Home")
                    @if (User.Identity.IsAuthenticated)
                    {
                        @Html.ActionLink("Cerrar Sesion", "Logout", "Home")
                    }
                </div>


            </nav>
        </header>
        <section class=" row m-0 p-0">
            <div class="admin-contenido">
                @RenderBody()
            </div>
        </section>
    </main>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3"
            crossorigin="anonymous"></script>
    <script src="~/JS/SortTable.js"></script>
</body>
</html>
